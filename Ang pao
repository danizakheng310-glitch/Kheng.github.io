    <script>
        let totalMoney = 0;
        
        function collectMoney() {
            // Generate random amount between 2 and 88 (lucky numbers!)
            const amount = Math.floor(Math.random() * 87) + 2;
            totalMoney += amount;
            
            // Update display
            document.getElementById('money').innerHTML = 
                `üí∞ Collected: $${totalMoney} (+$${amount})`;
            
            // Fun celebration
            if(amount > 50) {
                alert(`üéâ Wow! You got $${amount}! HUAT AH!`);
            }
            
            // Button animation
            const button = document.querySelector('.angpao-button');
            button.style.transform = 'scale(0.95)';
            setTimeout(() => {
                button.style.transform = 'scale(1)';
            }, 100);
        }
    </script>
