  <style>
    body {
      font-family: Arial;
      text-align: center;
      background-color: #ffe4b5;
      padding: 50px;
    }

    input, button {
      padding: 10px 20px;
      font-size: 16px;
      margin: 10px;
      cursor: pointer;
    }

    #yesBtn {
      background-color: red;
      color: white;
      border: none;
      border-radius: 10px;
    }

    #noBtn {
      background-color: gray;
      color: white;
      border: none;
      border-radius: 10px;
    }

    #angPao {
      margin-top: 30px;
      font-size: 24px;
      font-weight: bold;
      color: #d35400;
    }
  </style>
